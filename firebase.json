{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "EMAILJS_SETUP.md",
      "EMAIL_TEMPLATE_PREVIEW.md",
      "EMAILJS_TEMPLATE.html",
      "DEPLOYMENT_SUMMARY.md",
      "QUICK_START.md",
      "FIREBASE_DEPLOYMENT.md",
      "README.md",
      "deploy.bat",
      ".gitignore",
      ".firebaserc"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      },
      {
        "source": "**/*.@(css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=1800"
          }
        ]
      },
      {
        "source": "**/*.@(html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=1800"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
